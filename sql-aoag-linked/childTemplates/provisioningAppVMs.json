{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "vmBaseName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "appAvailabilitySetName": {
      "type": "string"
    },
    "appServerVMSize": {
      "type": "string"
    },
    "appServerVMCount": {
      "type": "int"
    },
    "appServerImagePublisher": {
      "type": "string"
    },
    "appServerImageOffer": {
      "type": "string"
    },
    "appServerImageSKU": {
      "type": "string"
    },
    "appBEAddressPoolID": {
      "type": "string"
    },
    "appServerSubnetRef": {
      "type": "string"
    },
    "tags": {
      "type": "object"
    }
  },
  "variables": {
    "availabilitySetConfiguration": {
      "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Compute/availabilitySets/',parameters('appAvailabilitySetName'))]"
    },
    "appLoadBalancerConfig": {
      "id": "[parameters('appBEAddressPoolID')]"
    }
  },
  "resources": [
    {
      "condition": "[greater(parameters('appServerVMCount'), 1)]",
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[parameters('appAvailabilitySetName')]",
      "apiVersion": "2017-12-01",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Aligned"
        },
      "properties": {
        "platformFaultDomainCount": 3,
        "platformUpdateDomainCount": 3
      }
    },
{
      "name": "[concat(parameters('vmBaseName'), copyIndex(2), '-nic')]",
      "condition": "[greater(parameters('appServerVMCount'), 1)]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "apiVersion": "2020-08-01",
      "copy": {
        "name": "appNicLoop",
        "count": "[parameters('appServerVMCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('appServerSubnetRef')]"
              },
             "loadBalancerBackendAddressPools": [
               "[if(greater(parameters('appServerVMCount'), 1), variables('appLoadBalancerConfig'), json('null'))]"
             ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('vmBaseName'), '1-nic')]",
      "condition": "[equals(parameters('appServerVMCount'), 1)]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "apiVersion": "2020-08-01",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('appServerSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2020-12-01",
      "condition": "[greater(parameters('appServerVMCount'), 1)]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('vmbaseName'), copyIndex(2))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/availabilitySets/',parameters('appAvailabilitySetName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces/', concat(parameters('vmBaseName'), copyIndex(2), '-nic'))]"
      ],
      "copy": {
        "name": "appServerMachineLoop",
        "count": "[parameters('appServerVMCount')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('appServerVMSize')]"
        },
        "availabilitySet": "[if(greater(parameters('appServerVMCount'), 1), variables('availabilitySetConfiguration'), json('null'))]"
        ,
        "osProfile": {
          "computerName": "[concat(parameters('vmbaseName'), copyIndex(2))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('appServerImagePublisher')]",
            "offer": "[parameters('appServerImageOffer')]",
            "sku": "[parameters('appServerImageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('vmbaseName'), copyIndex(2),'-os-disk')]",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(parameters('vmbaseName'), copyIndex(2),'-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('https://',parameters('storageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "apiVersion": "2020-12-01",
      "condition": "[not(greater(parameters('appServerVMCount'), 1))]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('vmbaseName'), '1')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces/', concat(parameters('vmBaseName'), '1-nic'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('appServerVMSize')]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('vmbaseName'), '1')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('appServerImagePublisher')]",
            "offer": "[parameters('appServerImageOffer')]",
            "sku": "[parameters('appServerImageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('vmbaseName'), '1-os-disk')]",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(parameters('vmbaseName'), '1-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('https://',parameters('storageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
