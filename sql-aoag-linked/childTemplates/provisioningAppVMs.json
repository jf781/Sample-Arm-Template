{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "appName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "appAvailabilitySetName": {
      "type": "string"
    },
    "appServerVMSize": {
      "type": "string"
    },
    "appServerVMCount": {
      "type": "int"
    },
    "appServerImagePublisher": {
      "type": "string"
    },
    "appServerImageOffer": {
      "type": "string"
    },
    "appServerImageSKU": {
      "type": "string"
    },
    "tags": {
      "type": "object"
    }
  },
  "variables": {
    "availabilitySetConfiguration": {
      "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Compute/availabilitySets/',parameters('appAvailabilitySetName'))]"
    },
    "vmBaseName": "[concat(parameters('appName'), if(equals(parameters('location'), 'Central US'), 'a1', 'a2'), 'uiappvm0')]"
  },
  "resources": [
    {
      "condition": "[greater(parameters('appServerVMCount'), 1)]",
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[parameters('appAvailabilitySetName')]",
      "apiVersion": "2017-12-01",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Aligned"
        },
      "properties": {
        "platformFaultDomainCount": 3,
        "platformUpdateDomainCount": 3
      }
    },
    {
      "apiVersion": "2020-12-01",
      "condition": "[greater(parameters('appServerVMCount'), 1)]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(variables('vmBaseName'), copyindex(2))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/availabilitySets/',parameters('appAvailabilitySetName'))]"
      ],
      "copy": {
        "name": "appServerMachineLoop",
        "count": "[parameters('appServerVMCount')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('appServerVMSize')]"
        },
        "availabilitySet": "[if(greater(parameters('appServerVMCount'), 1), variables('availabilitySetConfiguration'), json('null'))]"
        ,
        "osProfile": {
          "computerName": "[concat(variables('vmBaseName'), copyindex())]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('appServerImagePublisher')]",
            "offer": "[parameters('appServerImageOffer')]",
            "sku": "[parameters('appServerImageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(variables('vmBaseName'), copyindex(),'-os-disk')]",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(variables('vmBaseName'), copyindex(),'-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('https://',parameters('storageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "apiVersion": "2020-12-01",
      "condition": "[not(greater(parameters('appServerVMCount'), 1))]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(variables('vmBaseName'), '1')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "dependsOn": [
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('appServerVMSize')]"
        },
        "osProfile": {
          "computerName": "[concat(variables('vmBaseName'), '1')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('appServerImagePublisher')]",
            "offer": "[parameters('appServerImageOffer')]",
            "sku": "[parameters('appServerImageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(variables('vmBaseName'), '1-os-disk')]",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(variables('vmBaseName'), '1-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('https://',parameters('storageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
