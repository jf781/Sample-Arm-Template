{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "sqlVMName": {
      "type": "string"
    },
    "sqlFileWitnessName": {
      "type": "string"
    },
    "sqlVMCount": {
      "type": "int"
    },
    "sqlBEAddressPoolID": {
      "type": "string"
    },
    "dbSubnetRef": {
      "type": "string"
    },
    "wfeServerBaseName": {
      "type": "string"
    },
    "wfeServerVMCount": {
      "type": "int"
    },
    "wfeBEAddressPoolID": {
      "type": "string"
    },
    "webFrontEndSubnetRef": {
      "type": "string"
    },
    "appServerBaseName": {
      "type": "string"
    },
    "appServerVMCount": {
      "type": "int"
    },
    "appBEAddressPoolID": {
      "type": "string"
    },
    "appServerSubnetRef": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('sqlFileWitnessName'), '-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('dbSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('sqlVMName'), copyindex(), '-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "copy": {
        "name": "sqlNicLoop",
        "count": "[parameters('sqlVMCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('dbSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('sqlBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('wfeServerBaseName'), copyindex(), '-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "copy": {
        "name": "wfeNicLoop",
        "count": "[parameters('wfeServerVMCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('webFrontEndSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('wfeBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('appServerBaseName'), copyindex(), '-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "copy": {
        "name": "appNicLoop",
        "count": "[parameters('appServerVMCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('appServerSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('appBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "webFrontEndIpAddresses": {
      "type": "object",
      "copy": {
        "count": "[parameters('wfeServerVMCount')]",
        "input": "[reference(concat(parameters('wfeServerBaseName'), copyindex(), '-nic').dnsSettings)]"
      }
    }
  }
}
