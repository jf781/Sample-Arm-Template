{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "dbSubnetRef": {
      "type": "string"
    },
    "sqlVMName": {
      "type": "string"
    },
    "sqlVMCount": {
      "type": "int"
    },
    "sqlBEAddressPoolID": {
      "type": "string"
    },
    "sqlFileWitnessName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('sqlVMName'), copyindex(), '-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "copy": {
        "name": "sqlNicLoop",
        "count": "[parameters('sqlVMCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('dbSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('sqlBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('sqlFileWitnessName'), '-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('dbSubnetRef')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "networkInterfaces": {
      "type": "array",
      "copy": {
        "count": "[parameters('sqlVMCount')]",
        "input": {
          "id": "[reference(concat(parameters('sqlVMName'), copyindex(), '-nic'), '2015-06-15', 'Full').resourceId]",
          "vmName": "[parameters('sqlVMName')]" 
        }
      }
    }
  }
}
