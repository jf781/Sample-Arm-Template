{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "failoverLocation": {
      "type": "string"
    },
    "sqlVMName": {
      "type": "string"
    },
    "sqlServerVMCount": {
      "type": "int"
    },
    "sqlBEAddressPoolID": {
      "type": "string"
    },
    "sqlSubnetRef": {
      "type": "string"
    },
    "failoverSqlVMName": {
      "type": "string"
    },
    "failoverSqlServerVMCount": {
      "type": "int"
    },
    "failoverSqlBEAddressPoolID": {
      "type": "string"
    },
    "failoverSqlSubnetRef": {
      "type": "string"
    },
    "wfeServerBaseName": {
      "type": "string"
    },
    "wfeServerVMCount": {
      "type": "int"
    },
    "wfeBEAddressPoolID": {
      "type": "string"
    },
    "webFrontEndSubnetRef": {
      "type": "string"
    },
    "appServerBaseName": {
      "type": "string"
    },
    "appServerVMCount": {
      "type": "int"
    },
    "appBEAddressPoolID": {
      "type": "string"
    },
    "appServerSubnetRef": {
      "type": "string"
    }
  },
  "variables":{
    "sqlLoadBalancerConfig": {
      "id": "[parameters('sqlBEAddressPoolID')]"
    },
    "failoverSqlLoadBalancerConfig": {
      "id": "[parameters('failoverSqlBEAddressPoolID')]"
    },
    "appLoadBalancerConfig": {
      "id": "[parameters('appBEAddressPoolID')]"
    },
    "wfeLoadBalancerConfig": {
      "id": "[parameters('wfeBEAddressPoolID')]"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('sqlVMName'), copyindex(), '-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "copy": {
        "name": "sqlNicLoop",
        "count": "[parameters('sqlServerVMCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('sqlSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                "[if(greater(parameters('sqlServerVMCount'), 1), variables('sqlLoadBalancerConfig'), json('null'))]"
              ]
            }
          }
        ]
      }
    },
