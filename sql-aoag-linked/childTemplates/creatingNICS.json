{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "failoverLocation": {
      "type": "string"
    },
    "sqlVMName": {
      "type": "string"
    },
    "sqlServerVMCount": {
      "type": "int"
    },
    "sqlBEAddressPoolID": {
      "type": "string"
    },
    "sqlSubnetRef": {
      "type": "string"
    },
    "failoverSqlVMName": {
      "type": "string"
    },
    "failoverSqlServerVMCount": {
      "type": "int"
    },
    "failoverSqlBEAddressPoolID": {
      "type": "string"
    },
    "failoverSqlSubnetRef": {
      "type": "string"
    },
    "wfeServerBaseName": {
      "type": "string"
    },
    "wfeServerVMCount": {
      "type": "int"
    },
    "wfeBEAddressPoolID": {
      "type": "string"
    },
    "webFrontEndSubnetRef": {
      "type": "string"
    },
    "appServerBaseName": {
      "type": "string"
    },
    "appServerVMCount": {
      "type": "int"
    },
    "appBEAddressPoolID": {
      "type": "string"
    },
    "appServerSubnetRef": {
      "type": "string"
    }
  },
  "variables":{
    "sqlLoadBalancerConfig": {
      "id": "[parameters('sqlBEAddressPoolID')]"
    },
    "failoverSqlLoadBalancerConfig": {
      "enabled": {
        "id": "[parameters('failoverSqlBEAddressPoolID')]"
      },
      "disabled": "[json('null')]"
    },
    "appLoadBalancerConfig": {
      "id": "[parameters('appBEAddressPoolID')]"
    },
    "wfeLoadBalancerConfig": {
      "id": "[parameters('wfeBEAddressPoolID')]"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('sqlVMName'), copyindex(), '-nic')]",
      "condition": "[greater(parameters('sqlServerVMCount'), 1)]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2020-08-01",
      "copy": {
        "name": "sqlNicLoop",
        "count": "[parameters('sqlServerVMCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('sqlSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                "[if(greater(parameters('sqlServerVMCount'), 1), variables('sqlLoadBalancerConfig'), json('null'))]"
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('sqlVMName'), '-nic')]",
      "condition": "[not(greater(parameters('sqlServerVMCount'), 1))]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2020-08-01",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('sqlSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('failoverSqlVMName'), copyindex(), '-nic')]",
      "condition": "[greater(parameters('failoverSqlServerVMCount'), 1)]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('failoverLocation')]",
      "apiVersion": "2020-08-01",
      "copy": {
        "name": "sqlNicLoop",
        "count": "[parameters('failoverSqlServerVMCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('failoverSqlSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                "[if(greater(parameters('failoverSqlServerVMCount'), 1), variables('failoverSqlLoadBalancerConfig'), json('null'))]"
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('failoverSqlVMName'), '-nic')]",
      "condition": "[not(greater(parameters('failoverSqlServerVMCount'), 1))]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('failoverLocation')]",
      "apiVersion": "2020-08-01",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('failoverSqlSubnetRef')]"
              }
            }
          }
        ]
      }
    },    
    {
      "name": "[concat(parameters('wfeServerBaseName'), copyindex(), '-nic')]",
      "condition": "[greater(parameters('wfeServerVMCount'), 1)]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2020-08-01",
      "copy": {
        "name": "wfeNicLoop",
        "count": "[parameters('wfeServerVMCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('webFrontEndSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                "[if(greater(parameters('wfeServerVMCount'), 1), variables('wfeLoadBalancerConfig'), json('null'))]"
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('wfeServerBaseName'), '-nic')]",
      "condition": "[not(greater(parameters('wfeServerVMCount'), 1))]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2020-08-01",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('webFrontEndSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('appServerBaseName'), copyindex(), '-nic')]",
      "condition": "[greater(parameters('appServerVMCount'), 1)]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2020-08-01",
      "copy": {
        "name": "appNicLoop",
        "count": "[parameters('appServerVMCount')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('appServerSubnetRef')]"
              },
             "loadBalancerBackendAddressPools": [
               "[if(greater(parameters('appServerVMCount'), 1), variables('appLoadBalancerConfig'), json('null'))]"
             ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('appServerBaseName'), '-nic')]",
      "condition": "[not(greater(parameters('appServerVMCount'), 1))]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2020-08-01",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('appServerSubnetRef')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    // "webFrontEndIpAddresses": {
    //   "type": "array",
    //   "copy": {
    //     "count": "[parameters('wfeServerVMCount')]",
    //     "input": "[reference(concat(parameters('wfeServerBaseName'), copyindex(), '-nic')).ipConfigurations[0].properties.privateIPAddress]"
    //   }
    // }
  }
}
