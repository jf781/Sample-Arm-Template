{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "wfeServerBaseName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "diagStorageAccountName": {
      "type": "string"
    },
    "wfeAvailabilitySetName": {
      "type": "string"
    },
    "wfeServerVMSize": {
      "type": "string"
    },
    "wfeServerVMCount": {
      "type": "int"
    },
    "wfeServerImagePublisher": {
      "type": "string"
    },
    "wfeServerImageOffer": {
      "type": "string"
    },
    "wfeServerImageSKU": {
      "type": "string"
    },
    "tags": {
      "type": "object"
    }
  },
  "variables": {
      "availabilitySetConfiguration": {
      "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Compute/availabilitySets/',parameters('wfeAvailabilitySetName'))]"
    }
  },
  "resources": [
    {
      "condition": "[greater(parameters('wfeServerVMCount'), 1)]",
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[parameters('wfeAvailabilitySetName')]",
      "apiVersion": "2017-12-01",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Aligned"
        },
      "properties": {
        "platformFaultDomainCount": 3,
        "platformUpdateDomainCount": 3
      }
    },
    {
      "apiVersion": "2017-03-30",
      "condition": "[greater(parameters('wfeServerVMCount'), 1)]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('wfeServerBaseName'), copyindex())]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/availabilitySets/',parameters('wfeAvailabilitySetName'))]"
      ],
      "copy": {
        "name": "wfeServerMachineLoop",
        "count": "[parameters('wfeServerVMCount')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('wfeServerVMSize')]"
        },
        "availabilitySet": "[if(greater(parameters('wfeServerVMCount'), 1), variables('availabilitySetConfiguration'), json('null'))]",
        "osProfile": {
          "computerName": "[concat(parameters('wfeServerBaseName'), copyindex())]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('wfeServerImagePublisher')]",
            "offer": "[parameters('wfeServerImageOffer')]",
            "sku": "[parameters('wfeServerImageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('wfeServerBaseName'), copyindex(),'_OSDisk')]",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(parameters('wfeServerBaseName'), copyindex(),'-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('https://',parameters('diagStorageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-03-30",
      "condition": "[not(greater(parameters('wfeServerVMCount'), 1))]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('wfeServerBaseName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "dependsOn": [
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('wfeServerVMSize')]"
        },
        "availabilitySet": "[if(greater(parameters('wfeServerVMCount'), 1), variables('availabilitySetConfiguration'), json('null'))]",
        "osProfile": {
          "computerName": "[parameters('wfeServerBaseName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('wfeServerImagePublisher')]",
            "offer": "[parameters('wfeServerImageOffer')]",
            "sku": "[parameters('wfeServerImageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('wfeServerBaseName'), '_OSDisk')]",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(parameters('wfeServerBaseName'), '-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('https://',parameters('diagStorageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    }
  ],
  "outputs": {
  }
}
