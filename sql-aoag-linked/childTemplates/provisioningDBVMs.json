{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "appName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string"
    },
    "sqlAvailabilitySetName": {
      "type": "string"
    },
    "sqlVMSize": {
      "type": "string"
    },
    "sqlServerDataDiskLayout": {
      "type": "array"
    },
    "sqlServerVMCount": {
      "type": "int"
    },
    "sqlImagePublisher": {
      "type": "string"
    },
    "sqlImageOffer": {
      "type": "string"
    },
    "sqlImageSKU": {
      "type": "string"
    },
    "tags": {
      "type": "object"
    }
  },
  "variables": {
    "availabilitySetConfiguration": {
      "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Compute/availabilitySets/',parameters('sqlAvailabilitySetName'))]"
    },
    "vmBaseName": "[concat(parameters('appName'), if(equals(parameters('location'), 'Central US'), 'a1', 'a2'), 'uidbvm0')]"
  },
  "resources": [
    {
      "condition": "[greater(parameters('sqlServerVMCount'), 1)]",
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[parameters('sqlAvailabilitySetName')]",
      "apiVersion": "2017-12-01",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Aligned"
        },
      "properties": {
        "platformFaultDomainCount": 3,
        "platformUpdateDomainCount": 3
      }
    },
    {
      "apiVersion": "2017-03-30",
      "condition": "[greater(parameters('sqlServerVMCount'), 1)]",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(variables('vmBaseName'), copyindex())]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/availabilitySets/',parameters('sqlAvailabilitySetName'))]"
      ],
      "copy": {
        "name": "sqlvirtualMachineLoop",
        "count": "[parameters('sqlServerVMCount')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('sqlVMSize')]"
        },
        "availabilitySet": "[if(greater(parameters('sqlServerVMCount'), 1), variables('availabilitySetConfiguration'), json('null'))]",
        "osProfile": {
          "computerName": "[concat(variables('vmBaseName'), copyindex())]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('sqlImagePublisher')]",
            "offer": "[parameters('sqlImageOffer')]",
            "sku": "[parameters('sqlImageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(variables('vmBaseName'), copyindex(),'-os-disk')]",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "copy": [
            {
              "name": "dataDisks",
              "count": "[length(parameters('sqlServerDataDiskLayout'))]",
              "input": {
                "name" : "[concat(variables('vmBaseName'), copyindex(),'-data-disk-',parameters('sqlServerDataDiskLayout')[copyindex('dataDisks')].lun)]",
                "createOption": "Empty",
                "caching": "[parameters('sqlServerDataDiskLayout')[copyIndex('dataDisks')].caching]",
                "diskSizeGB": "[parameters('sqlServerDataDiskLayout')[copyIndex('dataDisks')].diskSizeGB]",
                "lun": "[parameters('sqlServerDataDiskLayout')[copyindex('dataDisks')].lun]",
                "managedDisk": {
                  "storageAccountType": "[parameters('sqlServerDataDiskLayout')[copyindex('dataDisks')].diskSku]"
                }
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(variables('vmBaseName'), copyindex(),'-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "condition": "[not(greater(parameters('sqlServerVMCount'), 1))]",
      "name": "[concat(variables('vmBaseName'), '01')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "dependsOn": [
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('sqlVMSize')]"
        },
        "osProfile": {
          "computerName": "[concat(variables('vmBaseName'), '1')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('sqlImagePublisher')]",
            "offer": "[parameters('sqlImageOffer')]",
            "sku": "[parameters('sqlImageSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(variables('vmBaseName'), '1-os-disk')]",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "copy": [
            {
              "name": "dataDisks",
              "count": "[length(parameters('sqlServerDataDiskLayout'))]",
              "input": {
                "name" : "[concat(variables('vmBaseName'), '1-data-disk-',parameters('sqlServerDataDiskLayout')[copyindex('dataDisks')].lun)]",
                "createOption": "Empty",
                "caching": "[parameters('sqlServerDataDiskLayout')[copyIndex('dataDisks')].caching]",
                "diskSizeGB": "[parameters('sqlServerDataDiskLayout')[copyIndex('dataDisks')].diskSizeGB]",
                "lun": "[parameters('sqlServerDataDiskLayout')[copyindex('dataDisks')].lun]",
                "managedDisk": {
                  "storageAccountType": "[parameters('sqlServerDataDiskLayout')[copyindex('dataDisks')].diskSku]"
                }
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(variables('vmBaseName'), '1-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
