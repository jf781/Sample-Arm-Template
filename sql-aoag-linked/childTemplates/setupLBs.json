{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "sqlLBName": {
      "type": "string"
    },
    "sqlLBFE": {
      "type": "string"
    },
    "sqlLBIPAddress": {
      "type": "string"
    },
    "dbSubnetRef": {
      "type": "string"
    },
    "sqlLBBE": {
      "type": "string"
    },
    "sqlLBBEID": {
      "type": "string"
    },
    "sqlLBFEConfigID": {
      "type": "string"
    },
    "sqlLBProbeID": {
      "type": "string"
    },
    "SQLAOProbe": {
      "type": "string"
    },
    "wfeLBName": {
      "type": "string"
    },
    "wfeLBFE": {
      "type": "string"
    },
    "wfeLBBE": {
      "type": "string"
    },
    "wfeLBIPAddress": {
      "type": "string"
    },
    "webFrontEndSubnetRef": {
      "type": "string"
    },
    "wfeLBBEID": {
      "type": "string"
    },
    "wfeLBFEConfigID": {
      "type": "string"
    },
    "wfeLBProbeID": {
      "type": "string"
    },
    "wfeLBProbe": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "name": "[parameters('sqlLBName')]",
      "type": "Microsoft.Network/loadBalancers",
      "location": "[parameters('location')]",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[parameters('sqlLBFE')]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('sqlLBIPAddress')]",
              "subnet": {
                "id": "[parameters('dbSubnetRef')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[parameters('sqlLBBE')]"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "SQLAlwaysOnEndPointListener",
            "properties": {
              "backendAddressPool": {
                "id": "[parameters('sqlLBBEID')]"
              },
              "frontendIPConfiguration": {
                "id": "[parameters('sqlLBFEConfigID')]"
              },
              "probe": {
                "id": "[parameters('sqlLBProbeID')]"
              },
              "protocol": "Tcp",
              "frontendPort": 1433,
              "backendPort": 1433,
              "enableFloatingIP": true
            }
          }
        ],
        "probes": [
          {
            "name": "[parameters('SQLAOProbe')]",
            "properties": {
              "protocol": "Tcp",
              "port": 59999,
              "intervalInSeconds": "5",
              "numberOfProbes": "2"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "name": "[parameters('wfeLBName')]",
      "type": "Microsoft.Network/loadBalancers",
      "location": "[parameters('location')]",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[parameters('wfeLBFE')]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('wfeLBIPAddress')]",
              "subnet": {
                "id": "[parameters('webFrontEndSubnetRef')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[parameters('wfeLBBE')]"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "SQLAlwaysOnEndPointListener",
            "properties": {
              "backendAddressPool": {
                "id": "[parameters('wfeLBBEID')]"
              },
              "frontendIPConfiguration": {
                "id": "[parameters('wfeLBFEConfigID')]"
              },
              "probe": {
                "id": "[parameters('wfeLBProbeID')]"
              },
              "protocol": "Tcp",
              "frontendPort": 1433,
              "backendPort": 1433,
              "enableFloatingIP": true
            }
          }
        ],
        "probes": [
          {
            "name": "[parameters('wfeLBProbe')]",
            "properties": {
              "protocol": "Tcp",
              "port": 80,
              "intervalInSeconds": "5",
              "numberOfProbes": "2"
            }
          }
        ]
      }
    }
  ]
}
